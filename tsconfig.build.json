{
  "compilerOptions": {
    "target": "es6",
    "downlevelIteration": true,
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "declaration": false,
    "outDir": "dist",
    "rootDir": "lib",
    "strict": true,
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": false,
    "sourceMap": true
  },
  "include": ["lib/**/*"],
  "exclude": [
    "node_modules", 
    "coverage",
    "lib/**/*.test.ts",
    "lib/generation/Example.ts"]
}